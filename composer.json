{
    "name": "locomotivemtl/charcoal-property",
    "type": "library",
    "description": "Charcoal Property defines an object (provides metadata)",
    "keywords": [ "charcoal" ],
    "homepage": "https://charcoal.locomotive.ca",
    "license": "MIT",
    "authors": [
        {
            "name": "Mathieu Ducharme",
            "email": "mat@locomotive.ca"
        },
        {
            "name": "Locomotive",
            "homepage": "https://locomotive.ca"
        }
    ],
    "minimum-stability": "dev",
    "extra": {
        "branch-alias": {
            "dev-master": "0.3.x-dev"
        }
    },
    "require": {
        "php": ">=5.6.0",
        "ext-pdo": "*",
        "psr/log": "^1.0",
        "locomotivemtl/charcoal-image": "~0.3",
        "locomotivemtl/charcoal-config": "~0.6",
        "locomotivemtl/charcoal-factory": "~0.3",
        "locomotivemtl/charcoal-core": "^0.2",
        "locomotivemtl/charcoal-translator": "~0.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "squizlabs/php_codesniffer": "^2.6",
        "satooshi/php-coveralls": "~1.0.1",
        "cache/void-adapter": "^0.3.0",
        "pimple/pimple": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Charcoal\\": "src/Charcoal/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Charcoal\\Tests\\": "tests/Charcoal"
        }
    },
    "scripts": {
        "test": [
            "@tests"
        ],
        "tests": [
            "@phplint",
            "@phpcs",
            "@phpunit"
        ],
        "phplint": "find {src,tests} -name '*.php' -print0 | xargs -0 -n1 -P8 php -l | grep -v '^No syntax errors detected'; test $? -eq 1",
        "phpunit": "php vendor/bin/phpunit --configuration tests/phpunit.xml --coverage-text",
        "phpcs": "phpcs --config-set ignore_warnings_on_exit 1;php vendor/bin/phpcs -ps --colors --standard=phpcs.xml src/",
        "phpcbf": "php vendor/bin/phpcbf -ps --colors --standard=phpcs.xml src/ tests/"
    }
}
